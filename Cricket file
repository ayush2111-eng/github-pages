<body>
  <h1>Simple Cricket Game</h1>
  <div class="scoreboard">
    Score: <span id="score">0</span> <br>
    Wickets: <span id="wickets">0</span>
  </div>
  <button class="btn" onclick="playShot()">Hit the Ball!</button>
  <div class="message" id="message"></div>

  <script>
    let score = 0;
    let wickets = 0;

    function playShot() {
      if (wickets >= 10) {
        document.getElementById('message').textContent = "Game Over! Refresh to play again.";
        return;
      }

      // Randomly generate runs or an out
      const outcomes = [0, 1, 2, 3, 4, 6, 'OUT'];
      const result = outcomes[Math.floor(Math.random() * outcomes.length)];

      if (result === 'OUT') {
        wickets++;
        document.getElementById('message').textContent = "You got OUT!";
      } else {
        score += result;
        document.getElementById('message').textContent = `You scored ${result} runs!`;
      }

      // Update scoreboard
      document.getElementById('score').textContent = score;
      document.getElementById('wickets').textContent = wickets;
    }
  </script>
</body>
